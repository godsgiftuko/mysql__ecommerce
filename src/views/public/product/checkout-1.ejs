          <div class="form-group mb-2">
            <label for="country">Country:</label>
            <input 
              class="form-control" 
              type="text" 
              name="country" 
              id="country" 
              required 
              <% if(typeof(country) !== "undefined") { %>
                value="<%- country %>"
              <% } %>
              <% if(user.country !== null) { %>
