 <!-- Login Wrapper Area-->
 <div class="login-wrapper d-flex align-items-center justify-content-center text-center">
  <!-- Background Shape-->
  <div class="background-shape"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5"><img class="big-logo" src="/img/core-img/logo-white" alt="">
        <!-- Register Form-->
        <div class="register-form mt-5 px-4">
          <form class="form-login" autocomplete="off" method="POST" action="/user/login">
            <input type="hidden" name="_csrf" value="<%- csrfToken %>">
            <div class="form-group text-start mb-4"><span>Email Address</span>
              <label for="loginEmail"><i class="lni lni-user"></i></label>
              <input class="form-control" autofocus id="loginEmail" name="loginEmail" type="email" placeholder="mail@example" required>
            </div>
            <div class="form-group text-start mb-4"><span>Password</span>
              <label for="loginPassword"><i class="lni lni-lock"></i></label>
              <input class="form-control" id="loginPassword" name="loginPassword" type="password" placeholder="**********" required>
            </div>

            <%- include ('../partials/messages.ejs') %>
            
            <button class="btn btn-warning btn-lg w-100" type="submit">Log In</button>
          </form>
        </div>
        <!-- Login Meta-->
        <div class="login-meta-data"><a class="forgot-password d-block mt-3 mb-1" href="/user/reset">Forgot Password?</a>
          <p class="mb-0">Didn't have an account?<a class="ms-1" href="/user/register">Register Now</a></p>
        </div>
        <!-- View As Guest-->
        <div class="view-as-guest mt-3"><a class="btn" href="/">View as Guest</a></div>
      </div>
    </div>
  </div>
</div>

<div class="container d-none justify-content-center align-items-center cont-login">
  <div class="text-center w-100">
    <form class="form-login" autocomplete="off" method="POST" action="/user/login">
      <input type="hidden" name="_csrf" value="<%- csrfToken %>">
      <a href="/">
        <img class="mb-4" src="/img/logo.png" alt="" width="72" height="72">
      </a>
      <h1 class="h3 mb-3 font-weight-normal">
        Please sign in
      </h1>
      <label for="loginEmail" class="sr-only">
        Email address
      </label>
      <input type="email" id="loginEmail" name="loginEmail" class="form-control" placeholder="Email address" required autofocus>
      <label for="loginPassword" class="sr-only">
        Password
      </label>
      <input type="password" id="loginPassword" name="loginPassword" class="form-control" placeholder="Password" required>

      <%- include ('../partials/messages.ejs') %>

      <button class="btn btn-lg btn-primary btn-block" type="submit">
        Sign in
      </button>
      <p class="my-1">
        Forgot your password?
        <a href="/user/reset" class="text-decoration-none text-body"><b>Reset here</b></a>.
      </p>
      <p class="my-1">
        Don't have an account?
        <a href="/user/register" class="text-decoration-none text-body"><b>Register here</b></a>.
      </p>
      <p class="mt-5 mb-3 text-muted">&copy; Jewelz 2020</p>
    </form>
  </div>
</div>