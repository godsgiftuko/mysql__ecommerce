<div class="login-wrapper d-flex align-items-center justify-content-center text-center">
  <!-- Background Shape-->
  <div class="background-shape"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5"><img class="big-logo" src="img/core-img/logo-white.png" alt="">
        <!-- Register Form-->
        <div class="register-form mt-5 px-4">
          <form class="form-register" autocomplete="off" action="/user/register" method="POST">
            <input type="hidden" name="_csrf" value="<%- csrfToken %>">
            <div class="form-group text-start mb-4"><span>Full Name</span>
              <label for="registerName"><i class="lni lni-user"></i></label>
              <input 
              class="form-control"
              id="registerName"
              name="registerName"
              type="text"
              placeholder="John Doe"
              required 
              autofocus 
              <% if(typeof(fullname) !== "undefined") { %>
                value= "<%- fullname %>"
              <% } %>
              >
            </div>
            <div class="form-group text-start mb-4"><span>Email</span>
              <label for="registerEmail"><i class="lni lni-envelope"></i></label>
              <input class="form-control" id="registerEmail" type="email" 
              placeholder="Email address" 
              name="registerEmail" 
              required 
              <% if(typeof(email) !== "undefined") { %>
                value= "<%- email %>"
              <% } %>
              >
            </div>
            <div class="form-group text-start mb-4"><span>Password</span>
              <label for="registerPassword"><i class="lni lni-lock"></i></label>
              <input class="input-psswd form-control" id="registerPassword" type="password"
              minlength="6" 
              placeholder="**********"
              name="registerPassword" 
              required 
              <% if(typeof(password) !== "undefined") { %>
                value= "<%- password %>"
              <% } %>
              ><div class="password-meter-wrapper progress" style="display: none;"><div id="password-progress" class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100" style="width:1%;"></div></div><div id="password-score" class="password-score" style="display: none;"></div><div id="password-recommendation" class="password-recommendation"></div><input type="hidden" id="password-strength-score" value="0">
            </div>

            <%- include ('../partials/messages.ejs') %>

            <button class="btn btn-warning btn-lg w-100" type="submit">Sign Up</button>
          </form>
        </div>
        <!-- Login Meta-->
        <div class="login-meta-data">
          <p class="mt-3 mb-0">Already have an account?<a class="ms-1" href="/user/login">Sign In</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

